<dl class="form">
  <dt><%= f.label :title %></dt>
  <dd><%= f.text_field :title, class: 'textfield' %></dd>
</dl>

<dl class="form">
  <div class="form-checkbox">
    <label><%= f.radio_button :public_repo, true %> Public</label>
    <%= mega_octicon('repo') %>
    <span class="note">Submit assignments using public repositories. All submissions will be visible to the world.</span>
  </div>

  <div class="form-checkbox">
    <label><%= f.radio_button :public_repo, false %> Private</label>
    <%= mega_octicon('lock') %>
    <span class="note">Submit assignments using private repositories. Submissions will only be visible to the submitter and organization owners.</span>
  </div>
</dl>

<dl class="form">
  <dt><label>Add your starter code from GitHub <small>(optional)</small> </label></dt>
  <dd><input class="textfield js-autocomplete-textfield" type="text" name="repo_name" value="<%= assignment.full_name %>" placeholder="<%= assignment.full_name || 'Search repositories'%>" autocomplete="off" data-autocomplete-search-endpoint="github_repos"></dd>
  <dd class="dd-autocomplete-suggestions"><%= render_autocomplete_suggestions_container %></dd>
  <input class="js-autocomplete-resource-id" type="hidden" name="repo_id" />
</dl>

<dl class="form">
  <% if @assignment.present? %>
    <dt><label>Use an existing student identifier type</label></dt>

    <dl class="form">
      <%= select(:student_identifier_type, :id, options_for_select(@student_identifier_types, selected = @assignment.student_identifier_type.present? ? @assignment.student_identifier_type.id : nil), include_blank: true ) %>
    </dl>

    <dt><label>Or create a new student identifier type</label></dt>
    <dd><input class="textfield" type="text" value="" placeholder="Name" name="student_identifier_type[name]" id="student_identifier_type_name"></dd>
    <br/>
    <dd><input class="textfield" type="text" value="" placeholder="Description" name="student_identifier_type[description]" id="student_identifier_type_description"></dd>

  <% end %>
</dl>
