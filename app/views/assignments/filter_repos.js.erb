(function() {
    <% if @list_type == :roster_entries %>
        $("#assignment-repo-list").html(
            "<%= j render partial: 'assignments/assignment_roster_list', locals: {
                organization: @organization,
                assignment: @assignment,
                list_type: :roster_entries,
                roster_entries: @roster_entries
            } %>"
        );

        $("#assignment-repo-pagination").html(
            "<%= j render partial: 'shared/pagination', locals: {
                collection: @roster_entries,
                param_name: :students_page
            } %>"
        );
    <% elsif @list_type == :assignment_repos %>
        $("#assignment-repo-list").html(
            "<%= j render partial: 'assignments/assignment_roster_list', locals: {
                organization: @organization,
                assignment: @assignment,
                list_type: :assignment_repos,
                assignment_repos: @assignment_repos
            } %>"
        );

        $("#assignment-repo-pagination").html(
            "<%= j render partial: 'shared/pagination', locals: {
                collection: @assignment_repos,
                param_name: :page
            } %>"
        );
    <% end %>

    $("#sort-mode-field").val("<%= @current_sort_mode %>");
})();
