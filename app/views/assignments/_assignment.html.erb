<div class="assignment-list-item flex-table">
  <div class="flex-table-item">
    <span class="assignment-icon assignment-icon-individual left">
      <%= octicon 'person', height: 22 %>
    </span>

    <h3 class="assignment-name-link">
      <%= link_to assignment.title, organization_assignment_path(@organization, assignment) %>
    </h3>

    <p class="assignment-type text-muted">Individual assigment</p>
  </div>

  <div class="flex-table-item clipboard-form">
    <div class="input-group assignment-invite-link">
      <%= render partial: "shared/invitations/clipboard_form", locals: InvitationHelper.attributes(assignment.invitation, request.base_url) %>
    </div>
  </div>
</div>
