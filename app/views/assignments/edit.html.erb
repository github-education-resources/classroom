<%= render 'organizations/organization_banner' %>

<%= render 'assignments/banner' %>

<div class="border-top border-bottom bg-white">
  <div class="container-lg p-responsive py-5">
    <%= form_for [@organization, @assignment] do |f| %>
      <div class="d-md-flex gutter-md">
        <div class="col-md-8">
          <%= render partial: 'assignments/assignment_form_options', locals: { f: f } %>

          <div class="d-flex flex-items-center">
            <%= f.submit 'Save changes', class: 'btn btn-primary mr-2' %>
            <%= link_to 'Cancel', [@organization, @assignment], class: 'btn', role: 'button' %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="Box Box--condensed">
            <div class="Box-header bg-red">
              <h3 class="Box-title text-white">Delete this assignment</h3>
            </div>
            <div class="Box-body">
              <p class="text-gray">Once you delete this assignment, there is no going back. Please be certain.</p>
              <a data-remodal-target="delete-assignment" class="btn btn-danger btn-block">Delete this assignment</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render partial: 'assignments/delete_assignment_modal' %>
