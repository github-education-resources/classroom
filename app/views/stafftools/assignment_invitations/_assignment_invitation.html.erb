<div class="d-flex flex-md-row flex-items-center classroom-resource-item">
  <div class="col-1 d-flexp">
    <span class="assignment-icon assignment-icon-individual left">
      <%= octicon 'link' %>
    </span>
  </div>

  <div class="col-10 col-md-10 d-flex flex-column">
    <%= link_to stafftools_assignment_invitation_path(assignment_invitation.id) do %>
      <strong class="search-result-title"><%= "#{t('views.stafftools.assignment_invitations.invitation_for')} #{assignment_invitation.assignment_title}" %></strong>
    <% end %>

    <span class="text-gray css-truncate css-truncate-target"><%= t('views.stafftools.assignment_invitations.created') %> <%= local_time_ago(assignment_invitation.created_at) %></span>
  </div>
</div>
