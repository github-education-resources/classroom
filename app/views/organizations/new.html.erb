<div class="container-lg p-responsive">

  <% if @users_github_organizations.empty? %>
    <div class="blankslate mt-6 py-8">
      <img src="https://ghicons.github.com/assets/images/light/Nested%20Teams.png" alt="Nested teams icon" class="mb-3" />
      <h3 class="mb-1"><%= t('views.organizations.no_organizations') %></h3>
      <p class="col-lg-9 mx-auto pb-3">
        <%= t('views.organizations.select_organization_desc') %>
        <%= t('views.organizations.please_create_or_authorize_new_organization', authorize_href: link_to(t('views.organizations.authorize_organization_access_link'), github_access_management_url, target: '_blank')).html_safe %>
      </p>
      <p><a class="btn btn-sm btn-primary" href="https://github.com/account/organizations/new?coupon=&plan=team_free" role="button" target="_blank">Create a new organization</a></p>
      <p><a href="<%= github_access_management_url %>" target="_blank">Grant access to an existing organization</a></p>
    </div>
  <% else %>
    <div class="Subhead Subhead--spacious">
      <div class="Subhead-heading"><%= t('views.organizations.select_organization') %></div>
      <div class="Subhead-actions"><a href="https://github.com/account/organizations/new?coupon=&plan=team_free" class="btn btn-sm" target="_blank" role="button"><%= t('views.organizations.new_organization_button_label') %></a></div>
      <div class="Subhead-description"><%= t('views.organizations.select_organization_desc') %></div>
    </div>
    <%= form_for @organization do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="d-flex flex-wrap gutter-condensed">
        <% @users_github_organizations.each do |org| %>
          <div class="col-6 col-md-4 mb-6">
            <% if org[:role] == 'admin' %>
              <%= render partial: 'organization_select', locals: { org: org } %>
            <% else %>
              <%= render partial: 'disabled_organization_select', locals: { org: org } %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <%= render partial: 'shared/pagination', locals: { collection: @users_github_organizations } %>
</div>

<div class="protip">
  <%= octicon 'light-bulb' %> <%= t('views.organizations.grant_organization_access_protip', href: link_to(t('views.organizations.grant_organization_access_link'), github_access_management_url, target: '_blank')).html_safe %>
</div>
