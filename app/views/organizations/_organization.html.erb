<% organization = organization.decorate %>

<div class="flex-table organization-list-item">
  <div class="flex-table-item">
    <%= image_tag organization.avatar_url(120), class: 'avatar left', height: 60, width: 60, alt: "@#{organization.login}" %>

    <%= link_to organization, class: 'organization-title' do %>
      <strong class="css-truncate-target"><%= organization.title %></strong>
    <% end %>

    <span class="text-muted css-truncate-target">@<%= organization.login %></span>
  </div>

  <div class="flex-table-item organization-stats text-right">
    <span class="organization-stat-item text-muted tooltipped tooltipped-s" aria-label="Individual Assignments">
      <%= octicon('person') %><%= organization.assignments.count %>
    </span>

    <span class="organization-stat-item text-muted tooltipped tooltipped-s" aria-label="Group Assignments">
      <%= octicon('organization') %><%= organization.group_assignments.count %>
    </span>
  </div>
</div>
