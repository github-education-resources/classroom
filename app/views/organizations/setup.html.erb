<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading">Setup your classroom</h2>
  </div>

  <div class="site-content-body">
    <%= form_for @organization, url: { action: :setup_organization } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="columns">
        <div class="two-thirds column">
          <dl class="form">
            <dt><label>Please give your classroom a more descriptive name</label></dt>
            <dd class="bottom_margin"><%= f.text_field :title, class: 'textfield', placeholder: 'Please give your classroom a more descriptive name' %>
            <dt><label>Enter your schools email domain <small>(optional)</small></label></dt>
            <dd><%= f.text_field :email_domain, class: 'textfield', placeholder: '@___' %>
          </dl>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Continue', class: 'btn btn-green' %>
      </div>
    <% end %>
  </div>
</div>
