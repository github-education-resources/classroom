<div class="assignment-list-item flex-table">
  <div class="flex-table-item">
    <span class="group-assignment-icon assignment-icon-group left">
      <%= octicon 'organization', height: 22 %>
    </span>
    <h3 class="assignment-name-link">
      <%= link_to group_assignment.title, organization_group_assignment_path(@organization, group_assignment) %>
    </h3>
    <p class="assignment-type text-muted">Group assignment for <strong><%= group_assignment.grouping.title %></strong></p>
  </div>

  <div class="flex-table-item clipboard-form">
    <div class="input-group assignment-invite-link">
      <%= render partial: "shared/invitations/clipboard_form", locals: InvitationHelper.attributes(group_assignment.invitation, request.base_url) %>
    </div>
  </div>
</div>

